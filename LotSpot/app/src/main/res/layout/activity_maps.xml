<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--The Google Map fragment-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/TFaddress"
                android:layout_width="290dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/Bsearch"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="onSearch"
                android:text="Search" />

        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.mapwithmarker.MapsMarkerActivity" />
    </LinearLayout>

    <!-- The navigation drawer, must be at the 2nd from top child-->
    <RelativeLayout android:id="@+id/left_drawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:background="#111"
        android:paddingTop="20dp"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/price_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag Price"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/seekBarPrice"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/price_slider"/>

        <TextView
            android:id="@+id/distance_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag Distance"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/seekBarPrice"/>

        <SeekBar
            android:id="@+id/seekBarDistance"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/distance_slider"/>

        <TextView
            android:id="@+id/disabled_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disabled Parking"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/seekBarDistance"/>

        <Switch
            android:id="@+id/switchDisabled"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disabled_switch"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>

